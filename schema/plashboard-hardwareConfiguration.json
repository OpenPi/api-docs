{
	"type": "object",
	"$schema": "http://json-schema.org/draft-03/schema",
	"id": "http://jsonschema.net",
	"required": true,
	"properties": {
		"id": {
			"type": "integer",
			"description": "Hardware ID",
			"required": true,
		},
		"name": {
			"type": "string",
			"description": "Hardware name to display",
			"required": true,
		},
		"pin": {
			"type": "integer",
			"description": "Pin where hardware was connected on Raspberry",
			"required": true,
		},
		"type": {
			"type": "string",
			"description": "Analogic or Numeric",
			"required": true
		},
		"IO": {
			"type": "string",
			"description": "If the harware is an input (sensor) or output (actuator)",
			"required": true
		},
		"PullUpDownResistor": {
			"type": "string",
			"description": "If the harware is connected on a pull up or down resistor",
			"required": true
		},
		"unit": {
			"type": "string",
			"description": "Unit name of the hardware",
			"required": true
		},
		"tension": {
			"type": "string",
			"description": "Alimentation of the hardware",
			"required": true
		}
	}
}